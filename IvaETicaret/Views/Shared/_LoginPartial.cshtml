@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btn btn-outline-dangerk"><i class="bi bi-x-circle-fill"></i>Çıkış Yap</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-secondary" asp-area="Identity" asp-page="/Account/Register" style="margin-right:0.5rem"><i class="bi bi-person-square"></i>Üye Ol</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-success" asp-area="Identity" asp-page="/Account/Login"><i class="bi bi-box-arrow-in-right"></i> İva Giriş Yap</a>
        </li>
    }
</ul>
