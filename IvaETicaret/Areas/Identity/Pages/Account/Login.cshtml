@page
@model LoginModel

@{
    ViewData["Title"] = "Giriş Sayfası";
}


<div class="container">
    <div class="container" style="max-width:800px">
        <div class="row ">
            <div class="col-md-4 mx-auto">    <img src="~/images/image/resim-yok-png-2-300x300.png" width="300px" height="250px" /></div>
        </div>

        @*   <h1>@ViewData["Title"]</h1>*@
        <section>
            <form id="account" method="post">
                @*         <h2>Oturum Açmak İçin Lütfen Giriş yapın</h2>*@


                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"  />
                    <label asp-for="Input.Email"  class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger" ></span>
                </div>
                <br />
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label">Şifre</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                             Beni Hatırla?
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Giriş Yap</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Şifremi Unuttum</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Yeni Kullanıcı Oluştur</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">E-posta onayını yeniden gönder</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>
